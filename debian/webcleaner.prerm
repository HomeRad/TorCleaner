#!/bin/sh -e
# prerm script for webcleaner
#
# see: dh_installdeb(1)

#DEBHELPER#

package=webcleaner
service=/var/service/$package

if [ "$1" = "remove" ]; then
    # stop service
    svwaitdown $service
    # remove service link
    if [ -h /var/service/webcleaner ]; then
        rm -f /var/service/webcleaner
    fi
    # remove SSL certificates
    webcleaner-certificates remove
fi
exit 0

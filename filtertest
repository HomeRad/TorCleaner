#!/usr/bin/env python2
""" test script to test filtering"""

if __name__=='__main__':
    import sys
    if len(sys.argv)<3:
        raise SystemExit, "usage: filtertest command filename_or_url"
    import wc, time
    command = sys.argv[1]
    if command=='filter':
        data = open(sys.argv[2]).read()
        i = wc.filter.FILTER_RESPONSE_MODIFY
    elif command=='block':
        i = wc.filter.FILTER_REQUEST
        data = sys.argv[2]
    else:
        raise SystemExit, "unknown command"
    wc.configure(None, None)
    start = time.clock()
    wc.DebugLevel = 3
    attrs = wc.filter.initStateObjects()
    filtered = wc.filter.applyfilter(i, data, 'finish', attrs)
    stop = time.clock()
    print filtered
    print "time: %.3f seconds" % (stop-start)
